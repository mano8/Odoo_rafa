<?xml version="1.0" encoding="UTF-8"?>
<!-- see https://github.com/odoo/odoo/blob/15fd3f62769b137cb9a0625f47b333424b851a27/addons/point_of_sale/static/src/app/screens/receipt_screen/receipt/order_receipt.xml -->
<templates id="template" xml:space="preserve">
    <t t-name="pos_indv_receipt.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'product-price')]" position="attributes">
            <attribute name="t-if">!individualReceipt</attribute>
        </xpath>
        <xpath expr="//div[contains(@class, 'product-price')]" position="after">
            <t t-if="individualReceipt">
                <div class="product-price price fw-bolder">
                    <t t-if="line.price === 'free'">Free</t>
                    <t t-else="" t-esc="line.unitPrice"/>
                    <t t-esc="pp"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>