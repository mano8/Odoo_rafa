<?xml version="1.0" encoding="UTF-8"?>
<templates id="prepaid_products_summary" xml:space="preserve">
    <t t-name="pos_indv_receipt.prepaid_products_summary" owl="1">
        
        <t t-if="props?.data?.prepaid_items?.length > 0">
            <div class="pos-receipt p-2 mw-100">
                <div class="text-center">--------------------------------</div>
                <div class="text-center text-uppercase fw-bold fs-1">
                    <h3 t-esc="props.data.label_prepaid_product_list_head" />
                </div>
                <div class="text-center pb-2">--------------------------------</div>
                <t t-foreach="props.data.prepaid_items" t-as="line" t-key="line_index">
                    <div class="d-flex flex-column py-2">
                        <div class="d-flex justify-content-between">
                            <div class="product-name d-inline-block flex-grow-1 fw-bold pe-1 text-truncate">
                                <span class="fw-bold" t-esc="line.full_product_name"/>
                            </div>
                            <div class="product-price price fw-bold">
                                <t t-esc="props.formatCurrency(line.price_unit)"/>
                            </div>
                            
                        </div>
                        <div class="d-flex price-per-unit">
                            <span class="pe-2 fw-bold"><t t-esc="props.data.label_prepaid_quantity" />:</span>
                            <span class="qty px-1 border rounded text-bg-view fw-bold" t-esc="line.prepayed_quantity"/>
                        </div>
                        <div class="d-flex text-nowrap w-100">
                            <span class="fw-bold fs-2" t-esc="line.prepaid_uuid"/>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </t>

</templates>