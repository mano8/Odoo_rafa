<?xml version="1.0" encoding="UTF-8"?>
<!-- see https://github.com/odoo/odoo/blob/15fd3f62769b137cb9a0625f47b333424b851a27/addons/point_of_sale/static/src/app/screens/receipt_screen/receipt/order_receipt.xml -->
<templates id="template" xml:space="preserve">

    <t t-name="pos_indv_receipt.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//OrderWidget" position="attributes">
            <attribute name="t-if">!this.props.data.printCachierReceipt</attribute>
        </xpath>
        <xpath expr="//OrderWidget" position="after">
            <t t-if="props.data.printCachierReceipt">
                <t t-call="pos_indv_receipt.prepaid_products_summary" t-set="props.data.orderlines" />
            </t>
        </xpath>
    </t>
    
</templates>